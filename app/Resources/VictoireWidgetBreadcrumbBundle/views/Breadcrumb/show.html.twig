<nav class="full-breadcrumb">
    <ul class="breadcrumb">
        {% for breadcrumb_item in breadcrumbs %}
        <li>
            {% if not loop.last %}
                {% spaceless %}
                <a href="{{ breadcrumb_item.uri }}">
                    {{ breadcrumb_item.label|truncate(40) }}
                </a>
                {% endspaceless %}
            {% else %}
                {{ breadcrumb_item.label }}
            {% endif %}
        </li>
        {% endfor %}
    </ul>
</nav>