{% extends 'VictoireCoreBundle:Widget:show.html.twig' %}
{% trans_default_domain "victoire" %}

{% block content %}
<div class="row grid">
    {% for item in items %}
    <div class="col-sm-6 col-md-4">
        <a class="rental-gate" href="{{ vic_business_link(item) }}" style="background-image: url({{ item.picture.url }})" data-hover="en voir plus">
            <span class="surface">{{ item.surface }} m<sup>2</sup></span>
            <span class="title">{{ item.title }}</span>
        </a>
    </div>
    {% endfor %}
</div>
{% endblock content %}
